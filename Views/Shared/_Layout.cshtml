<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Equinox</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
        var bookingCount = ViewBag.BookingCount as int? ?? 0;
    }

    @if (IsSectionDefined("Header"))
    {
        @RenderSection("Header", required: false)
    }
    else
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-light shadow-sm fixed-top">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Equinox</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Club" ? "active" : "")" asp-controller="Club" asp-action="List">Clubs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Class" ? "active" : "")" asp-controller="Class" asp-action="List">Classes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Membership" ? "active" : "")" asp-controller="Membership" asp-action="List">Membership</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "PrivateClass" ? "active" : "")" asp-controller="PrivateClass" asp-action="List">Private Training</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Gym" ? "active" : "")" asp-controller="Gym" asp-action="ShowClasses">Gym Session</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Gym" && currentAction == "ViewBookings" ? "active" : "")" asp-controller="Gym" asp-action="ViewBookings">
                                    Bookings
                                    @if (bookingCount > 0)
                                    {
                                        <span class="badge bg-danger ms-1">@bookingCount</span>
                                    }
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Home" && ViewContext.RouteData.Values["area"]?.ToString() == "Admin" ? "active" : "")"
                                   asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main class="container mt-4 pt-5">
        @* âœ… Show confirmation message from TempData centrally *@

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="text-center mt-5 mb-4">
        <hr />
        <div>
            <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a> |
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> |
            <a asp-area="" asp-controller="Home" asp-action="Terms">Terms</a> |
            <a asp-area="" asp-controller="Home" asp-action="CookiePolicy">Cookies</a>
        </div>
        <div class="mt-2 text-muted small">
            &copy; 2025 Equinox
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
