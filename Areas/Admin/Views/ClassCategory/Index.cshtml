@model IEnumerable<Equinox.Models.DomainModels.ClassCategory>

@{
    ViewData["Title"] = "Manage Class Categories";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Image</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClassCategoryId" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ClassCategoryId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
