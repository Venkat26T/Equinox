@model Equinox.Models.DomainModels.ClassCategory

<h2 class="mb-3">Delete Category</h2>

<div class="alert alert-warning">
    <h4 class="alert-heading">Are you sure you want to delete this category?</h4>
    <p>
        <strong>@Model.Name</strong> - @Model.Image
    </p>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="ClassCategoryId" />

    <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
