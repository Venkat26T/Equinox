@model IEnumerable<Equinox.Models.DomainModels.User>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Add New</a>
</p>

<table class="table table-hover table-bordered table-striped align-middle shadow-sm rounded">
    <thead class="table-primary text-center">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>DOB</th>
            <th>Is Coach</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.DOB.ToShortDateString()</td>
                <td>@(item.IsCoach ? "Yes" : "No")</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-outline-primary me-1"
                       asp-action="Edit" asp-route-id="@item.UserId">Edit</a>
                    <a class="btn btn-sm btn-outline-danger"
                       asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
