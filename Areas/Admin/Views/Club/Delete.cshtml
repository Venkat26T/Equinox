@model Equinox.Models.DomainModels.Club

<h2 class="mb-3">Delete Club</h2>

<div class="alert alert-warning">
    <h4 class="alert-heading">Are you sure you want to delete this club?</h4>
    <p>
        <strong>@Model.Name</strong>
    </p>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="ClubId" />

    <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
