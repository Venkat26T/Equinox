@model IEnumerable<Equinox.Models.DomainModels.Club>

@{
    ViewData["Title"] = "Manage Clubs";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Club</a>
</p>

<table class="table table-striped table-bordered align-middle shadow-sm rounded">
    <thead class="table-light text-center">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col" style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.PhoneNumber</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ClubId" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ClubId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
