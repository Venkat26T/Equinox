@model IEnumerable<Equinox.Models.Membership>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Manage Membership";
}
<div class="container mt-4">
    <h2>Memberships</h2>

    <p>
        <a class="btn btn-primary" asp-action="Create">Add Membership</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th class="text-end">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var m in Model) {
            <tr>
                <td>@m.Name</td>
                <td class="text-end">@m.Price.ToString("C")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@m.MembershipID">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@m.MembershipID">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
