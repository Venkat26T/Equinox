@{
    Layout = "_Layout";
}

@section Header {
    @{
        var ctrl = (ViewContext.RouteData.Values["controller"] as string) ?? "";
        string Active(string targetCtrl) =>
            ctrl.Equals(targetCtrl, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand text-white"
                   asp-area="Admin" asp-controller="Home" asp-action="Index">
                    Equinox Admin
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white @Active("Home")"
                               asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @Active("Club")"
                               asp-area="Admin" asp-controller="Club" asp-action="Index">Manage Club</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @Active("ClassCategory")"
                               asp-area="Admin" asp-controller="ClassCategory" asp-action="Index">Manage Class Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @Active("User")"
                               asp-area="Admin" asp-controller="User" asp-action="Index">Manage User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @Active("Membership")"
                               asp-area="Admin" asp-controller="Membership" asp-action="Index">Manage Membership</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-area="" asp-controller="Home" asp-action="Index">Back to Site</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
}

<div class="container mt-3">
    @RenderBody()
</div>

@RenderSection("Scripts", required: false)
